<%= form_with(model: cliente) do |form| %>
  <% if cliente.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(cliente.errors.count, "error") %> prohibited this cliente from being saved:</h2>

      <ul>
        <% cliente.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nome_completo, style: "display: block" %>
    <%= form.text_field :nome_completo %>
  </div>

  <div>
    <%= form.label :data_de_nascimento, style: "display: block" %>
    <%= form.date_field :data_de_nascimento %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :telefone, style: "display: block" %>
    <%= form.text_field :telefone %>
  </div>

  <div>
    <%= form.label :cpf, style: "display: block" %>
    <%= form.text_field :cpf %>
  </div>

  <div>
    <%= form.label :senha, style: "display: block" %>
    <%= form.text_field :senha %>
  </div>

  <div>
    <%= form.fields_for :endereco do |endereco_form| %>
      CEP: <%= endereco_form.text_field :cep %>
      Logradouro: <%= endereco_form.text_field :logradouro %>
      Bairro: <%= endereco_form.text_field :bairro %>
      Cidade: <%= endereco_form.text_field :cidade %>
      Complemento: <%= endereco_form.text_field :complemento %>
      Delete: <% endereco_form.check_box :_destroy%>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
